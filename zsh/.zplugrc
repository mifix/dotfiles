source ~/.zplug/init.zsh

# Try to set terminal to 256 color mode
zplug 'chrissicool/zsh-256color'

# Prompt theme
POWERLEVEL9K_MODE='awesome-fontconfig'
#POWERLEVEL9K_MODE='nerdfont-complete'
zplug "bhilburn/powerlevel9k", use:powerlevel9k.zsh-theme


# Remind me of aliases (because I'm old :()
export ZSH_PLUGINS_ALIAS_TIPS_TEXT="Junge! Alias tip: "
export ZSH_PLUGINS_ALIAS_TIPS_EXCLUDES="_ ll vi"
zplug 'djui/alias-tips'


# Auto-close and delete matching delimiters in zsh
zplug "hlissner/zsh-autopair", defer:2

# Autosuggest
zplug "zsh-users/zsh-autosuggestions"

# Command not found
zplug "Tarrasch/zsh-command-not-found"

# A next-generation cd command with an interactive filter 
export ENHANCD_DISABLE_DOT=1
zplug "b4b4r07/enhancd", use:init.sh


# Search history
zplug "psprint/history-search-multi-word"



# Set the priority when loading
# e.g., zsh-syntax-highlighting must be loaded
# after executing compinit command and sourcing other plugins
# (If the defer tag is given 2 or above, run after compinit command)
zplug "zdharma/fast-syntax-highlighting", defer:2

zplug 'zplug/zplug', hook-build:'zplug --self-manage'

# Install plugins if there are plugins that have not been installed
#if ! zplug check --verbose; then
if ! zplug check; then
    printf "Install? [y/N]: "
    if read -q; then
        echo; zplug install
    fi
fi

# Then, source plugins and add commands to $PATH
#zplug load --verbose
zplug load 
